{# src/Sdz/BlogBundle/Ressources/views/Blog/see.html.twig #}

{% extends "SdzBlogBundle::layout.html.twig" %}

{% block title %}
    {{ parent() }} - article reading
{% endblock %}

{% block sdzblog_body %}

  {% include "SdzBlogBundle:Blog:article.html.twig" %}

  <p>
    <a href="{{ path('sdzblog_index') }}" class='btn'>
      <i class='icon-chevron-left'></i>
      Back to the list
    </a>
    <a href="{{ path('sdzblog_modify', {'id': article.id}) }}" class='btn'>
      <i class='icon-edit'></i>
        Edit this article
    </a>
    <a href="{{ path('sdzblog_delete', {'id': article.id}) }}" class='btn'>
      <i class='icon-trash'></i>
      Delete this article
    </a>
  </p>

{% endblock %}
