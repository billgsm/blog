{# app/Ressources/views/layout.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

        <title>{% block title %}Sdz{% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('bootstrap/css/bootstrap.css') }}" type="text/css" />
        {% endblock %}
    </head>

    <body>
        <div class="container">
            <div id="header" class="hero-unit">
                <h1>My project Symfony</h1>
                <p>This project is based on Symfony2, and built thanks to the tutorial</p>
                <p><a class="btn btn-large btn-primary" href="http://siteduzero.com">Read the tutorial</a></p>
            </div> {#Â div#header.hero-unit #}

            <div class="row">
                <div id="menu" class="span3">
                    <h3>The blog</h3>
                    <ul class="nav nav-pills nav-stacked">
                        <li><a href="{{ path('sdzblog_index') }}">Blog index</a></li>
                        <li><a href="{{ path('sdzblog_add') }}">Add an article</a></li>
                    </ul> {# ul.nav.nav-pills.nav-stacked #}

                    {{ render(controller("SdzBlogBundle:Blog:menu", {'number': 3})) }}
                </div> {# div#menu.span3 #}
                <div id="content" class="span9">
                {% block body %}
                {% endblock %}
                </div> {# div.span9 #}
            </div> {# div.row #}

            <hr />

            <footer>
                <p>The sky's limit 2012 and beyond</p>
            </footer>
        </div> {# div.container #}

        {% block javascript %}
            <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
            <script type="text/javascript" src="{{ asset('bootstrap/js/bootstrap.js') }}"></script>
        {% endblock %}

    </body>
</html>
